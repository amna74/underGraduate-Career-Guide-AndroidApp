<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar2"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/textView"
            android:textColor="#B323283A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome to UCG"

            android:fontFamily="@font/aclonica"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:gravity="center"
            android:text="This app is perfectly designed for Undergraduate Students. This app assists you to choose the best appropriate university in the field of their interest."
            android:textColor="#B323283A"
            android:textSize="11.5sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:background="@drawable/btn_style"


                android:text="Learn More"

                android:textColor="#fff"
             />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style2"
                android:textColor="#B323283A"

                android:text="Jerry Axe"

                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"

        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Sign In"
            android:padding="6dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"

            >

            <EditText
                android:id="@+id/emailad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"

                android:drawableRight="@drawable/email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email Address"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:passwordToggleEnabled="true"

           >

            <EditText
                android:id="@+id/passs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="24dp"
                android:hint="Password"
                android:layout_marginRight="24dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"


            android:orientation="horizontal">


            <TextView
                android:id="@+id/forgetpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"


                android:layout_weight="1"


                android:textStyle="italic"


                android:padding="3dp"
                android:text="Forget Password?"
                android:textColor="#333333"
              />

            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_gravity="right"
                android:background="@drawable/btn_style3"
                android:drawableRight="@drawable/ic_send_black_24dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/aclonica"
                android:text="Log in"

                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="17dp"
               />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="____________More Options____________"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"/>
<!--            android:layout_marginTop="20dp"-->



        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="18dp"
            android:onClick="btn_signup"

            android:backgroundTint="#4CAF50"
            android:background="@drawable/btn_style3"
            android:text="Create New Account"
            android:fontFamily="@font/aclonica"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
           />



        <Button
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_style3"
            android:text="Continue with Google + "
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#DC4312"
            android:fontFamily="@font/aclonica"
            android:textSize="16dp"

           />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fBTn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="24dp"

            android:background="@drawable/btn_style3"
            android:backgroundTint="#3F51B5"

            android:fontFamily="@font/aclonica"
            android:text="Sign in with Facebook"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />


    </LinearLayout>
</LinearLayout>